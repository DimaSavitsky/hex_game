<h1>Pages#index</h1>
<p>Find me in app/views/pages/index.html.erb</p>


<%- if current_user %>

    <%= "Current user is #{ current_user }" %>
    <%= link_to "Logout", player_session_path(current_user), method: :delete %>

<% else %>

    No current user.
    <%= form_tag player_sessions_path, :method => :post do %>
        <div class="field">
          <%= label_tag :email %><br />
          <%= text_field_tag :email %>
        </div>
        <div class="field">
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
        </div>
        <div class="actions">
          <%= submit_tag "Login" %>
        </div>
    <% end %>

<% end %>

